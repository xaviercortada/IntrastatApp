<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/list_proveedor_fact" android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/list_codigo_fact"/>
    <TextView
            android:text="TextView"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_proveedor_fact"
            android:textColor="#222e69"
            android:id="@+id/list_codigo_fact"/>
    <TextView
            android:text="TextView"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222e69"
            android:id="@+id/list_entrega_fact"
            android:layout_above="@+id/list_total_fact"
            android:layout_alignEnd="@+id/list_total_fact"
            />
    <TextView
            android:text="TextView"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_codigo_fact"
            android:textColor="#8e131c"
            android:id="@+id/list_fecha_fact"/>
    <TextView
            android:text="TextView"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8e131c"
            android:id="@+id/list_total_fact"
            android:layout_alignBaseline="@+id/list_fecha_fact"
            android:layout_alignBottom="@+id/list_fecha_fact"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"/>
</RelativeLayout>